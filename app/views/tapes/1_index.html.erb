<h1>Полный список</h1>

<div class="row">
  <div class="span10">
    <%#= will_paginate %>
  </div>
</div>
<% @tapes.each do |fact| %>
  <div class="row">
    <div class="span1">
      <%= fact.tp_site %>
    </div>
    <div class="span1">
      <%= fact.tp_status %>
    </div>
    <div class="span1">
      <%= fact.tp_tag %>
    </div>
    <div class="span4">
      <%= fact.tp_article %>
    </div>
    <div class="span4">
      <%= fact.tp_comments %>
    </div>
    <div class="span1">
      <%#= link_to 'Show', tape %>
      <%= link_to 'Edit', edit_tape_path(fact) %>
      <%#= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>


<% end %>
  <div class="span10">
    <%#= will_paginate %>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Tp site</th>
      <th>Tp date</th>
      <th>Tp article</th>
      <th>Tp url</th>
      <th>Tp status</th>
      <th>Tp tag</th>
      <th>Tp comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tapes.each do |tape| %>
      <tr>
        <td><%= tape.tp_site %></td>
        <td><%= tape.tp_date %></td>
        <td><%= tape.tp_article %></td>
        <td><%= tape.tp_url %></td>
        <td><%= tape.tp_status %></td>
        <td><%= tape.tp_tag %></td>
        <td><%= tape.tp_comments %></td>
        <td><%= link_to 'Show', tape %></td>
        <td><%= link_to 'Edit', edit_tape_path(tape) %></td>
        <td><%= link_to 'Destroy', tape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tape', new_tape_path %>
